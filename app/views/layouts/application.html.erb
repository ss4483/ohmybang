  <body data-turbolink="false">
    <div id = "Progress_Loading" style="position: fixed; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.5); z-index: 1000;"><!-- 로딩바 -->
      <div style="position: fixed; top:50%; left:50%;  transform: translate(-50%, -50%);">
        <div class="spinner-grow text-info" style="width: 3rem; height: 3rem;" role="status">
          <span class="sr-only">Loading...</span>
        </div>
      </div>
    </div>

    <%= render 'shared/header' %>
    <%= yield %>
    <%= render 'shared/footer' %>
    
    <%= render 'shared/scroll' %>
    <%= render 'shared/alert' %>

    <% flash.each do |k, v| %>
      <% k = 'info' if k == 'notice' %>
      <% k = 'danger' if k == 'alert' %>
      <%= render '/shared/msg', k: k, v: v %>
    <% end %>

    <%= yield 'javascript_content' %>
    <script>
      $(document).ready(function(){
        $('#Progress_Loading').hide(); 
      })
    </script>
