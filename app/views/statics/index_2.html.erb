  <div class="container today_reviews">
    <div class="row d-flex justify-content-center">
      <div class="col-md-12 col-lg-10 p-0">
        <p class="title">오늘의 리뷰<a href="/reviewLists" class="more">더 보기</a></p>
      </div>
      <div class="w-100"></div>
      <div class="col-12 col-sm-12 col-md-12 col-lg-10">
        <div class="row d-flex justify-content-around">
          <% @reviews.each_with_index do |review, i|%>
            <div class="today_review_box col-sm-4 col-md-4 col-lg-4 p-0 <%= "d-none d-sm-block" if i == 7%>">
              <a href="/reviews/<%=review.id%>" class="today_review">
                <div class="short_comment_box">
                  <p class="short_comment"><%=truncate(review.short_comment, length: 32)%></p>
                </div>
                <div class="etc_box">
                  <div class="address_box">
                    <p class="address"><%= truncate(review.address, length: 16) %></p>
                  </div>
                  <div class="recommend_box">
                    <img src="<%= image_url(is_recommend_img(review.is_recommend))%>" style="vertical-align: middle;" />
                    <% if review.is_recommend == "t"%>
                      <span style="color: #18716b">추천</span>  
                    <% else %>
                      <span style="color: #fa4c47">비추천</span>
                    <% end %>
                  </div>
                  <div class="options">
                    <div class="option">
                      <img src="<%= image_url("ic/message.png")%>" /><span><%= ReviewItem.where(review_id: review.id).select(:comment).map(&:comment).compact.join.length + review.long_comment.to_s.length %><span class="option_unit">자</span></span>
                    </div>
                    <div class="option">
                      <img src="<%= image_url("ic/camera.png")%>" /><span><%= ReviewImg.where(review_id: review.id).count %><span class="option_unit">개</span></span>
                    </div>
                    <div class="option">
                      <img class="video" src="<%= image_url("ic/video.png")%>" /><span><%= ReviewVideo.where(review_id: review.id).count %><span class="option_unit">개</span></span>
                    </div>
                  </div>
                </div>
              </a>  
            </div>
          <% end %>
          <div class="today_review_box d-none"></div>
          <div class="today_review_box col-sm-4 col-md-4 col-lg-4 p-0">
            <a href="/reviewLists" class="today_review add d-flex align-items-center justify-content-center">
              <p>더 보기...</p>
            </a>  
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

