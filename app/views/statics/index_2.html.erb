<div style="background-color: #f6f5f5; padding-bottom: 90px;">
  <div style="background-color: white;">
  <div class="container main_post_box">
    <div class="row d-flex justify-content-center">
      <div class="col-md-6 col-lg-5 p-0">
        <a class="post_title" href="/notices">
          <p>공지사항<span>오마방의 새로운 소식을 전해드립니다.</span></p>
        </a>
        <div class="req_reviews">
          <% @notices.each do |notice| %>
            <a class="req_review" href="/notices#title_<%=notice.id%>">
              <p class="content" style="position: relative; padding: 5px 10px;">
                <span style="color:#8c8c8c">[<%=notice.post_type%>]</span> <%= truncate(notice.title, length: 16) %>
                <% if notice.created_at + 7.days >= Time.now %>
                  <span class="badge" style="color: #39706a;padding-bottom: 4px; font-size: 8px; margin-left: 5px; vertical-align: text-top;">new</span>
                <% end %>
                <span class="date" style="color: #8E8E8E; position: absolute; bottom: 5px; right:10px; font-size:10px;"><%= notice.created_at.strftime("%Y.%m.%d %H:%M") %> </span>
              </p>
            </a>
          <% end %>
        </div>
      </div>
      <div class="col-md-6 col-lg-5 p-0">
        <div class="post_title">
          <p>SNS</p>
        </div>
        <div class="sns_box">
          <a href="https://www.instagram.com/ohmybang_official" target="_blank" class="sns" style="border-bottom: 1px solid #E1E1E1; border-right: 1px solid #E1E1E1">
