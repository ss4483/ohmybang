        </a>
        <div class="req_reviews">
          <% @req_comments.each do |comment| %>
            <a class="req_review" href="/reqReviews#comment_<%=comment.id%>">
              <p class="content">
                <%= comment.content %>
                <% if comment.created_at + 7.days >= Time.now %>
                  <span class="badge" style="color: #39706a;padding-bottom: 4px; font-size: 8px; margin-left: 5px; vertical-align: text-top;">new</span>
                <% end %>
              </p>
              <p class="remarks">
                <span class="address"><%= comment.req_address.si_nm %> <%= comment.req_address.sgg_nm %> <%= comment.req_address.emd_nm %></span>
                <span class="date"><%= comment.created_at.strftime("%Y.%m.%d %H:%M") %> </span>
              </p>
            </a>
