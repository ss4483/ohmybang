<style>

/** index_2 **/
.index_2-main_01 {
  background-size: cover;
  position: relative;
  background-color: #42817A;
  height: 550px;
  width: 100%;
  bottom: 0px;
  .empty{
    padding-top: 120px;
    background-color: white;
  }
  .center_box {
    position: absolute; top: 45%;transform: translate(0%, -50%);width: 100%;
    .btn{
      font-size:17px;
    }
  }
  .text_img {
    width:160px; 
    display:block; 
    margin-left:auto
  }
  .phone_img {
    width: 125px;
    margin-top: -65px;
  }
}
.index_2-main_02 { 
  position: relative;
  width: 100%;
  height: 550px;
  bottom: 0px;
  background-repeat: no-repeat;
  background-position: center center;
  background-color: #FFFCED;
}
.index_2-main_03 { 
  position: relative;
  width: 100%;
  height: 550px;
  bottom: 0px;
  background-repeat: no-repeat;
  background-position: center center;
  background-color: #F4F4F4;
}
.index_2-main_04 { 
  position: relative;
  width: 100%;
  height: 550px;
  bottom: 0px;
  background-repeat: no-repeat;
  background-position: center center;
  background-color: white;
}
.manual_title {
  font-size: 30px; font-weight: 900;color:#42817A;margin-bottom: 40px; border-bottom: solid 1px; padding-bottom: 10px;
}
// sm - Small devices (landscape phones, 576px and up)
@media (min-width: 576px) { 
  .manual_title {
    font-size: 30px;
  }
  .index_2-main_01 {
    min-height: 700px;
    height: 100vh;
    .center_box {
      top: 50%;
      .btn{
        font-size:25px;
      }
    }
    .text_img {
      width:265px; 
      display:block; 
      margin-left:auto
    }
    .phone_img {
      width: 180px;
      margin-top: -55px;
      margin-left: 5px;
    }
  }
  .index_2-main_02 { 
    height: calc(100vh - 102px);
    min-height: 800px;
  }
  .index_2-main_03 { 
    height: calc(100vh - 102px);
    min-height: 800px;
  }
  .index_2-main_04 { 
    height: calc(100vh - 102px);
    min-height: 800px;
  }
}
// md - Medium devices (tablets, 768px and up)
@media (min-width: 768px) {
  .manual_title {
    font-size: 40px;
  }
  .index_2-main_01 {
    .text_img {
      width:310px; 
      display:block; 
      margin-left:auto
    }
    .phone_img {
      width: 200px;
      margin-top: -73px;
      margin-left: 5px;
    }
  }
}
// lg - Large devices (desktops, 992px and up)
@media (min-width: 992px) { 
  .index_2-main_01 {
    .empty{
      padding-top: 146px;
    }
    .text_img {
      width:380px; 
      display:block; 
      margin-left:auto
    }
    .phone_img {
      width: 230px;
      margin-top: -96px;
      margin-left: 14px;
    }
   
  }
  .index_2-main_02 { 
    position: relative;
    width: 100%;
    height: calc(100vh - 102px);
    min-height: 800px;
    bottom: 0px;
    background-repeat: no-repeat;
    background-position: center center;
    background-color: #FFFCED;
  }
  .index_2-main_03 { 
    position: relative;
    width: 100%;
    height: calc(100vh - 102px);
    min-height: 800px;
    bottom: 0px;
    background-repeat: no-repeat;
    background-position: center center;
    background-color: #F4F4F4;
  }
  .index_2-main_04 { 
    position: relative;
    width: 100%;
    height: calc(100vh - 102px);
    min-height: 800px;
    bottom: 0px;
    background-repeat: no-repeat;
    background-position: center center;
    background-color: white;
  }
}

@-webkit-keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
    -webkit-transform: translateY(0);
    transform: translateX(0);
  }
    40% {
    -webkit-transform: translateY(-5px);
    transform: translateY(-5px);
  }
    60% {
    -webkit-transform: translateY(-4px);
    transform: translateY(-4px);
  }
}

@-moz-keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
    transform: translateY(0);
  }
    40% {
    transform: translateY(-5px);
  }
    60% {
    transform: translateY(-4px);
  }
}

@keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
    -ms-transform: translateY(0);
    transform: translateY(0);
  }
    40% {
    -ms-transform: translateY(-5px);
    transform: translateY(-5px);
  }
    60% {
    -ms-transform: translateY(-4px);
    transform: translateY(-4px);
  }
}

.arrow {
  position: absolute;
  bottom: 0;
  left: 50%;
  margin-left:-7px;
  width: 14px;
  height: 14px;
  background-image: url(data:image/svg+xml;base64,);
  background-size: contain;
}

.bounce {
  -webkit-animation: bounce 2s infinite;
  animation: bounce 2s infinite;
}

</style>
